@model EventOrg2027.Models.Eventos

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h4>.</h4>
<div>
    <h3>Eliminar Evento</h3>
    <h3>Tem a certeza que deseja eliminar "@Html.DisplayFor(model => model.NomeEventos)"?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome do Evento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeEventos)
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            Lotação
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lotacao)
        </dd>
        <dt class="col-sm-2">
            Data de Realização
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataRealizacao)
        </dd>
        <dt class="col-sm-2">
            Hora de Realização
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraRealizacao)
        </dd>
        <dt class="col-sm-2">
            Localidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Localidade.Descricao)
        </dd>
        <dt class="col-sm-2">
            Tipo de Evento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoEventos.NomeTipoEventos)
        </dd>
        <dt class="col-sm-2">
            Organizador
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Organizador.Contacto)
        </dd>
        <form asp-action="Delete">
            <input type="hidden" asp-for="EventosId" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <p></p>
            <p><a asp-action="Index" class="btn btn-dark">Voltar para a lista</a></p>
        </form>
    </dl>
    

</div>
