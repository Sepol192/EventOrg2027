@model EventOrg2027.Models.Eventos

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<h4>.</h4>

<div>
    <h3>Detalhes do Evento</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome do Evento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeEventos)
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            Lotação
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lotacao)
        </dd>
        <dt class="col-sm-2">
            Data de Realização
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataRealizacao)
        </dd>
        <dt class="col-sm-2">
            Hora de Realização
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraRealizacao)
        </dd>
        <dt class="col-sm-2">
            Localidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Localidade.Descricao)
        </dd>
        <dt class="col-sm-2">
            Tipo de Evento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoEventos.NomeTipoEventos)
        </dd>
        <dt class="col-sm-2">
            Organizador
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Organizador.Contacto)
        </dd>
        <div>
            <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.EventosId">Editar</a> |
            <p></p>
            <p><a asp-action="Index" class="btn btn-dark">Voltar para a lista</a></p>
        </div>
    </dl>
</div>

