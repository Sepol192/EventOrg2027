@model IEnumerable<EventOrg2027.Models.Localidade>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="masthead2">
    <h1>Localidades</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NomeLocalidade)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeLocalidade)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.LocalidadeId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.LocalidadeId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.LocalidadeId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</header>