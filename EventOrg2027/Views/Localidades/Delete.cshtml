@model EventOrg2027.Models.Localidade

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h4>.</h4>
    <div>
        <h3>Localidade</h3>
        <h5>Tem a certeza que quer apagar esta localidade?</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Nome da Localidade
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NomeLocalidade)
            </dd>
            <dt class="col-sm-2">
                Descrição
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class="col-sm-2">
                População
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Populacao)
            </dd>
            <div class="form-group">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="LocalidadeId" />
                    <input type="submit" value="Apagar" class="btn btn-danger" />
                    <p></p>
                    <p><a asp-action="Index" class="btn btn-dark">Voltar</a></p>
                </form>
            </div>
        </dl>
    </div>
